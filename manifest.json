{
  "manifest_version": 3,
  "name": "X.com Toolkit",
  "version": "2.0",
  "description": "A toolkit to scrape user data (reposts, follows) or unfollow users who don't follow back.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://x.com/*"
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}